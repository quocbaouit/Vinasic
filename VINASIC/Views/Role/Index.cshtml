@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    hr {
        margin-top: 0px;
        border: 0;
        border-top: 5px solid #fed189;
    }

    div.jtable-main-container > table.jtable > tbody > tr.jtable-data-row > td {
        padding: 0px;
    }
    #fixedbutton {
    position: fixed;
    bottom: 2px;
    right: 145px; 
}
    #fixedbutton1 {
    position: fixed;
    bottom: 2px;
    right: 35px; 
}
</style>
<script src="~/Scripts/VINASIC/Role/Role_Index.js"></script>
<div class="row">
    <div class="col-lg-12">
        <h3 style="background-color: #faf9f8" class="page-header">
            <img style="width: 200px" src="~/Files/logovinasic.png" />
        </h3>
        <ol class="breadcrumb">
            <li><i class="fa fa-home"></i><a href="/Dashboard/index">Trang Chủ</a></li>
            <li><i class="icon_documents_alt"></i>Phân Quyền</li>
            <li><i class="fa fa-user-md"></i>Quản Lý Nhóm Quyền</li>
        </ol>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading tab-bg-info">
                <ul class="nav nav-tabs">
                    <li id="ProcessStockIn" class="active">
                        <a data-toggle="tab" href="#recent-activity">
                            <i class="icon-home"></i>
                            Nhóm Quyền
                        </a>
                    </li>
                    <li id="CreateStockIn" class="">
                        <a data-toggle="tab" href="#edit-profile">
                            <i class="icon-envelope"></i>
                            Quản Lý Quyền
                        </a>
                    </li>
                </ul>
            </header>
            <div style="border-style: none" class="panel-body pannel-StockIn">
                <div class="tab-content">
                    <div id="recent-activity" class="tab-pane active">
                        <div id="jtableRole"></div>
                    </div>
                    <div id="edit-profile" class="tab-pane">
                        <section class="panel">
                            <h4 id="roleTemp"></h4>
                            <div id="jtablePermission"></div>
                            <button id="fixedbutton" style="width: 100px;margin-top: 10px;" save class="btn btn-primary">
                                <div class="button-image image-save"></div>
                                Lưu Thay Đổi
                            </button>
                            <button id="fixedbutton1" style="width: 100px;margin-top: 10px;margin-left:10px;background-color:#d0d0d0" cancel aria-hidden="true" class="btn">
                                <div class="button-image image-close"></div>
                                Không Lưu 
                            </button>
                        </section>

                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

<div class="modal fade" id="popup_Role" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4><span class="glyphicon glyphicon-pencil"></span>Thêm/Sửa Nhóm Quyền</h4>
            </div>
            <div class="modal-body" style="padding: 40px 50px;">
                <form role="form">
                    <input type="hidden" data-bind="value: Id" />
                    <div class="form-group">
                        <label for="Code"><span class="glyphicon glyphicon-qrcode"></span>Tên Nhóm Quyền</label>
                        <input type="text" data-bind="value: RoleName" class="form-control" id="RoleName" placeholder="Tên Nhóm Quyền">
                    </div>
                    <div class="form-group">
                        <input data-bind="checked: IsSystem" type="checkbox" />
                        <label for="IsSystem">Là Quyền Hệ Thống</label>
                        
                    </div>
                    <div class="form-group">
                        <label for="Description"><span class="glyphicon glyphicon-comment"></span>Mô Tả</label>
                        <input type="text" data-bind="value: Decription" class="form-control" id="Description" placeholder="Mô Tả">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button cancelRole aria-hidden="true" data-dismiss="modal" class="btn">
                    <div class="button-image image-close"></div>
                    Đóng
                </button>
                <button saveRole class="btn btn-primary">
                    <div class="button-image image-save"></div>
                    Lưu
                </button>
            </div>
        </div>

    </div>
</div>

   