<div style="margin-bottom: 15px;" class="row">
    <div class="form-group">
        <div class="col-md-2 col-sm-4 col-xs-12">
            <label for="datefrom">Từ Ngày</label>
            <input type="date" class="form-control" name="datefrom" value="" id="datefrom" />
        </div>
        <div class="col-md-2 col-sm-4 col-xs-12">
            <label for="dateto">Đến Ngày</label>
            <input type="date" class="form-control" name="dateto" value="" id="dateto" />
        </div>
        <div class="col-md-2 col-sm-4 col-xs-12">
            <label for="keyword">Từ Khóa</label>
            <input type="text" class="form-control" id="keyword" placeholder="" onkeypress=" return isNumberKey(event)">
        </div>
        <div class="col-md-2 col-sm-4 col-xs-12">
            <a id="search" style="margin-top: 25px" class="btn btn-primary" href="javascript:void(0)" title="Bootstrap 3 themes generator"><span class="icon_lightbulb_alt"></span>Tìm Kiếm</a>
        </div>
    </div>
</div>
<div id="jtablePaymentVoucher"></div>
<!-- Modal -->
<div class="modal fade" id="popup_PaymentVoucher" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4><span class="glyphicon glyphicon-pencil"></span>Thêm/Sửa Phiếu Chi</h4>
            </div>
            <div class="modal-body" style="padding: 40px 50px;">
                <form role="form">
                    <input type="hidden" data-bind="value: Id" />
                    <div class="form-group">
                        <label for="date">Ngày Chi</label>
                        <input type="date" data-bind="value: PaymentDate" class="form-control" name="date" value="" id="date" />
                    </div>
                    <div class="form-group">
                        <label for="Content"><span class="glyphicon glyphicon-qrcode"></span>Nội Dung</label>
                        <input type="text" data-bind="value: Content" class="form-control" id="Content" placeholder="Code">
                    </div>
                    <div class="form-group">
                        <label for="Name"><span class="glyphicon glyphicon-list-alt"></span>Số Tiền</label>
                        <input type="text" data-bind="value: Money" class="form-control" id="Name" placeholder="Name">
                    </div>
                    <div class="form-group">
                        <label for="ReceiptName"><span class="glyphicon glyphicon-list-alt"></span>Người Nhận</label>
                        <input type="text" data-bind="value: ReceiptName" class="form-control" id="ReceiptName" placeholder="Name">
                    </div>
                    <div class="form-group">
                        <label for="ReceiptAddress"><span class="glyphicon glyphicon-list-alt"></span>Địa Chỉ</label>
                        <input type="text" data-bind="value: ReceiptAddress" class="form-control" id="ReceiptAddress" placeholder="Name">
                    </div>
                    <div class="form-group">
                        <label for="Note"><span class="glyphicon glyphicon-comment"></span>Mô Tả</label>
                        <input type="text" data-bind="value: Note" class="form-control" id="Note" placeholder="Tên">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button cancel aria-hidden="true" data-dismiss="modal" class="btn">
                    <div class="button-image image-close"></div>
                    Đóng</button>
                <button save class="btn btn-primary">
                    <div class="button-image image-save"></div>
                    Lưu</button>
            </div>
        </div>

    </div>
</div>
