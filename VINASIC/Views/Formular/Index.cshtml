@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/VINASIC/Formular/Formular_Index.js"></script>
<div class="row">
    <div class="col-lg-12">
        <h3 style="background-color: #faf9f8" class="page-header">
            <img style="width: 200px" src="~/Files/logovinasic.png" />
        </h3>
        <ol class="breadcrumb">
            <li><i class="fa fa-home"></i><a href="/Order/Index">Home</a></li>
            <li><i class="fa fa-laptop"></i>Công Thức Lương</li>
        </ol>
    </div>
</div>
<!-- Modal -->
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading tab-bg-info">
                <ul class="nav nav-tabs">
                    <li id="ProcessStockIn" class="active">
                        <a data-toggle="tab" href="#recent-activity">
                            <i class="icon-home"></i>
                            Công Thức Lương
                        </a>
                    </li>
                    <li id="CreateStockIn" class="">
                        <a data-toggle="tab" href="#edit-profile">
                            <i class="icon-envelope"></i>
                            Tạo Công Thức Lương
                        </a>
                    </li>
                </ul>
            </header>
            <div style="border-style: none" class="panel-body pannel-StockIn">
                <div class="tab-content">
                    <div id="recent-activity" class="tab-pane active">
                        <div id="jtableFormular"></div>
                        <input type="hidden" id="temp" value="0" />
                    </div>
                    <div id="edit-profile" class="tab-pane disabled">
                        <section class="panel">
                            @*<h4 id="roleTemp"></h4>*@
                            <div class="form-group" style="width: 50%;margin-left: 20px">
                                <label for="Description">Mô tả cho công thức</label>
                                <input type="text" class="form-control" id="Description">
                            </div>
                            <div class="form-group" style="width: 50%;margin-left: 20px">
                                <label for="Code">Đại Lượng Tính Lương</label>
                                <input type="text" class="form-control" id="ElementFormular">
                            </div>
                            <div id="jtableFormularDetail"></div>
                            <button id="fixedbutton" style="width: 100px;margin-top: 10px;" save class="btn btn-primary">
                                <div class="button-image image-save"></div>
                                Lưu Thay Đổi
                            </button>
                            <button id="fixedbutton1" style="width: 100px;margin-top: 10px;margin-left:10px;background-color:#d0d0d0" cancel aria-hidden="true" class="btn">
                                <div class="button-image image-close"></div>
                                Không Lưu
                            </button>
                        </section>

                    </div>
                </div>
            </div>
        </section>
    </div>
</div>
